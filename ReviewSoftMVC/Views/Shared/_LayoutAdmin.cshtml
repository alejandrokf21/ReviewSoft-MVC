<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header" style="background-color: white;">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" style="background-color:#375a7f; ">
                <span class="icon-bar" style="background-color:white;"></span>
                <span class="icon-bar" style="background-color:white;"></span>
                <span class="icon-bar" style="background-color:white; "></span>
            </button>
            @Html.ActionLink("ReviewSoft", "Administrador", "Account", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 162%; word-spacing: 12px; border-right: thick solid #0ce3ac; color:#375a7f;font-weight: bold;" })
        </div>
        <div class="container">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @*<li><a href="#">Link</a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-size: 127%;">Gestiones<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Agregar Plataforma", "Create", "TIPO_PLATAFORMA", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Plataformas Registradas", "Index", "TIPO_PLATAFORMA", null, new { @style = "font-size: 120%;" })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Crear Categoria", "Create", "CATEGORIAs", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Categorias Registradas", "Index", "CATEGORIAs", null, new { @style = "font-size: 120%;" })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Agregar Tipo Licencia", "Create", "TIPO_LICENCIA", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Licencias Registradas", "Index", "TIPO_LICENCIA", null, new { @style = "font-size: 120%;" })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Agregar Empresa", "Create", "EMPRESAs", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Empresas Registradas", "Index", "EMPRESAs", null, new { @style = "font-size: 120%;" })</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-size: 127%;">Metricas <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Crear Metrica", "Create", "METRICAs", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Metricas Registradas", "Index", "METRICAs", null, new { @style = "font-size: 120%;" })</li>
                            @*<li class="divider"></li>
                                <li><a href="#">Separated link</a></li>*@
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-size: 127%;">Softwares <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Agregar Software", "Create", "SOFTWAREs", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Software Registrados", "Index", "SOFTWAREs", null, new { @style = "font-size: 120%;" })</li>
                            @*<li class="divider"></li>
                                <li><a href="#">Separated link</a></li>*@
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-size: 127%;">Usuarios <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Crear Usuario", "Register", "Account", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Usuarios Registrados", "Index", "USUARIOs", null, new { @style = "font-size: 120%;" })</li>
                            @*<li class="divider"></li>
                            <li>@Html.ActionLink("Crear Cliente", "Create", "Clientes", null, new { @style = "font-size: 120%;" })</li>
                            <li>@Html.ActionLink("Clientes Registrados", "Index", "Clientes", null, new { @style = "font-size: 120%;" })</li>*@
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
                @*<ul class="nav navbar-nav navbar-right">
                    </ul>*@
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CECH</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

